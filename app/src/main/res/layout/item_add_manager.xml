<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/action_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/manager_logo_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/unit_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/manager_name_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:maxLines="1"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="dfasdfasd"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/manager_logo_iv"
        app:layout_constraintLeft_toRightOf="@+id/manager_logo_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/manager_logo_iv"></TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/managers_name_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/manager_name_iv"></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/manager_bind_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_blue_square_bg"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="添加为本网格企业"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="@+id/manager_logo_iv"
        app:layout_constraintTop_toBottomOf="@+id/managers_name_rv"></TextView>
</android.support.constraint.ConstraintLayout>