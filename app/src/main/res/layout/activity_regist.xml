<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
    tools:context="com.juntai.upcodesafe.entrance.LoginActivity">

    <ImageView
        android:id="@+id/police_icon_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:src="@mipmap/police_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/app_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="智慧管理 精准服务"
        android:textColor="@color/green_lighter"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/police_icon_iv"
        app:layout_constraintRight_toRightOf="@+id/police_icon_iv"
        app:layout_constraintTop_toBottomOf="@+id/police_icon_iv"></TextView>

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:src="@mipmap/close_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close_iv">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_only_bottom_accent_shape_5dp"
            android:paddingBottom="5dp"
            android:text="注册"
            android:textSize="26dp"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <EditText
                android:id="@+id/regist_phone_et"
                style="@style/login_edit_tv_style"
                android:layout_marginTop="10dp"
                android:hint="注册手机号"
                android:inputType="phone"
                android:maxLength="11" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">


                <EditText
                    android:id="@+id/regist_check_code_et"
                    style="@style/login_edit_tv_style"
                    android:layout_weight="1"
                    android:hint="短信验证码"
                    android:inputType="number"
                    android:maxLength="6" />

                <TextView
                    android:id="@+id/regist_send_check_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/stroke_blue_square_bg"
                    android:paddingLeft="7dp"
                    android:paddingTop="5dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="5dp"
                    android:text="获取验证码"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/password"
                style="@style/login_edit_tv_style"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLength="16"
                 />

        </LinearLayout>

        <TextView
            android:id="@+id/regist_tv"
            style="@style/bt_bg_style"
            android:layout_marginTop="5dp"
            android:text="注册" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>