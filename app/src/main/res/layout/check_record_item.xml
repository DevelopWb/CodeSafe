<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"

    android:layout_marginRight="15dp"
    android:layout_height="65dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/unread_tag_iv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/record_time_tv"
            app:layout_constraintTop_toTopOf="@+id/record_time_tv"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_blue_round"
            app:layout_constraintLeft_toLeftOf="parent"
            ></ImageView>

        <TextView
            android:id="@+id/record_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintVertical_chainStyle="packed"
            android:text="2012年03月05日"
            app:layout_constraintBottom_toTopOf="@+id/check_big_tag_tv"
            app:layout_constraintLeft_toRightOf="@+id/unread_tag_iv"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/record_person_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="张三"
            app:layout_constraintBottom_toBottomOf="@+id/record_time_tv"
            app:layout_constraintLeft_toRightOf="@+id/record_time_tv"
            app:layout_constraintRight_toLeftOf="@+id/record_type_tv"
            app:layout_constraintTop_toTopOf="@+id/record_time_tv"></TextView>

        <TextView
            android:id="@+id/record_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="检查记录"
            app:layout_constraintLeft_toRightOf="@+id/record_person_tv"
            app:layout_constraintBottom_toBottomOf="@+id/record_time_tv"
            app:layout_constraintTop_toTopOf="@+id/record_time_tv"></TextView>

        <TextView
            android:id="@+id/punish_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/sp_filled_accent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginRight="15dp"
            android:text="罚"
            android:textColor="@color/white"
            android:visibility="invisible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/record_time_tv"
            app:layout_constraintTop_toTopOf="@+id/record_time_tv"></TextView>

        <TextView
            android:id="@+id/check_big_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:textSize="12dp"
            android:paddingBottom="2dp"
            android:background="@drawable/sp_accent_square_button"
            android:layout_marginTop="5dp"
            android:text="大标签"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/record_time_tv"
            app:layout_constraintTop_toBottomOf="@+id/record_time_tv"></TextView>

        <TextView
            android:id="@+id/check_small_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/sp_accent_square_button"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="小标签"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/check_big_tag_tv"
            app:layout_constraintTop_toTopOf="@+id/check_big_tag_tv"></TextView>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>